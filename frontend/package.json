{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:api8080": "VITE_BACKEND_PORT=8080 vite --host 127.0.0.1 --port 5173",
    "dev:api8081": "VITE_BACKEND_PORT=8081 vite --host 127.0.0.1 --port 5173",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest --config vitest.config.ts run",
    "test:e2e": "playwright test",
    "test:e2e:ci": "playwright test --workers=1 --reporter=line",
    "e2e:backend": "cd ../backend && mvn -q spring-boot:run",
    "e2e:backend:ready": "http-get://127.0.0.1:8080/health",
    "e2e:frontend": "vite --host 127.0.0.1 --port 5173",
    "e2e:frontend:ready": "http-get://127.0.0.1:5173",
    "e2e:local": "PLAYWRIGHT_DISABLE_WEBSERVER=1 npx start-server-and-test \"npm run e2e:backend\" http://127.0.0.1:8080/health \"npx start-server-and-test \\\"npm run e2e:frontend\\\" http://127.0.0.1:5173 \\\"npm run test:e2e:ci\\\"\""
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "@playwright/test": "^1.52.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vitest": "^3.0.8",
    "jsdom": "^25.0.1",
    "@testing-library/react": "^16.1.0",
    "@testing-library/jest-dom": "^6.6.3"
  }
}
